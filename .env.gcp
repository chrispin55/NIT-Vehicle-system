# Google Cloud Platform Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=8080

# Google Cloud SQL Configuration
# Option 1: Cloud SQL (Recommended)
DB_HOST=your-cloud-sql-connection-name
DB_PORT=3306
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=nit_itvms

# Option 2: Cloud SQL with Unix Socket (for App Engine)
# DB_HOST=/cloudsql/your-project:region:your-instance

# SSL Certificates (if required for Cloud SQL)
# DB_CA_CERT=path/to/ca-cert.pem
# DB_KEY_CERT=path/to/client-key.pem
# DB_CLIENT_CERT=path/to/client-cert.pem

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://your-project.appspot.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Cloud Specific
GCP_PROJECT=your-gcp-project-id
GCP_REGION=us-central1

# App Engine Specific
# APP_ENGINE_URL=https://your-project.appspot.com
